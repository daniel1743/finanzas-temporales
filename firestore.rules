rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Colección de usuarios - Cada usuario autenticado solo puede ver/editar sus propios datos
    match /usuarios/{userId} {
      // Permitir lectura y escritura solo si el usuario está autenticado
      // y el ID del documento coincide con el ID del usuario autenticado
      allow read, write: if request.auth != null && request.auth.uid == userId;

      // Sub-colección de transacciones (opcional, si decides usarla)
      match /transacciones/{transaccionId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }

    // Colección compartida (opcional, si quieres que la pareja comparta datos)
    match /shared/{docId} {
      allow read, write: if request.auth != null;
    }

    // Bloquear acceso a todo lo demás
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
